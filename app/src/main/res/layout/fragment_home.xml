<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kailaisi.hi_ui.icfont.IconFontTextView
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_home_search"
        android:gravity="center"
        android:text="@string/home_search_hint"
        android:textColor="#81313333"
        android:textSize="14sp" />

    <com.kailaisi.hi_ui.tab.top.HiTopLayout
        android:id="@+id/tab_top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
    <style name="lineAppearance">
        <item name="color">@color/color_C1B</item>
        <item name="height">1px</item>
        <item name="leftMargin">0dp</item>
        <item name="rightMargin">0dp</item>
        <item name="enable">true</item>
    </style>

    <style name="leftMarginLine" parent="lineAppearance">
        <item name="leftMargin">10dp</item>
    </style>

    <style name="style_left_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
    </style>

    <style name="BtnNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:backgroundTint">@color/color_dd2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="tv_profile_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>